with open('17-2.txt') as f:
    mass = list(map(int, f.readlines()))
counter1 = 0
counter2 = 0
max_elem = max(mass) * 10
min_elem = min(mass) * 10
for i in range(len(mass)-2):
    if mass[i]*mass[i+1]*mass[i+2] > max_elem:
        counter1 += 1
    if max(mass[i], mass[i+1], mass[i+2]) - min(mass[i], mass[i+1], mass[i+2]) > min_elem:
        counter2 += 1
print(max(counter1, counter2)-min(counter1, counter2), (counter1+counter2)//2)
